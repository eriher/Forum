              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <!-- Main router -->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>threads</from-outcome>
            <to-view-id>/partials/threads/threadList.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>posts</from-outcome>
            <to-view-id>/partials/threads/postList.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>addTopic</from-outcome>
            <to-view-id>/partials/topics/addTopic.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>addSubTopic</from-outcome>
            <to-view-id>/partials/topics/addSubtopic.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>addthread</from-outcome>
            <to-view-id>/partials/threads/addThread.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>threadlist</from-outcome>
            <to-view-id>/partials/threads/threadList.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>editSubTopic</from-outcome>
            <to-view-id>/partials/topics/editSubTopic.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>editMainTopic</from-outcome>
            <to-view-id>/partials/topics/editMainTopic.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>editThread</from-outcome>
            <to-view-id>/partials/threads/editThread.xhtml</to-view-id>
        </navigation-case>
